         {{#each data}}
         <div class="col-md-3">Meals Included: {{this.amount}}</div>
        {{/each}}
     </div>
     <div class="row">
         {{#each data}}
         <div class="col-md-3">Category: {{this.category}}</div>
        {{/each}}
