         {{#each data}}
         <div class="col-md-3">{{#strong}}{{this.title}}{{/strong}}</div>
        {{/each}}  
     </div>
     <div class="row">
         {{#each data}}
         <div class="col-md-3">Price: {{this.price}}</div>
        {{/each}}
     </div>
